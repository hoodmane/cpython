{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES2020",
    "module": "ES2022",
    "moduleResolution": "node",
    "composite": true,
    "tsBuildInfoFile": "tsconfig.tsbuildinfo",
    "strict": true,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "lib": ["ES2022", "DOM"],
  },
  "include": ["*.ts", "*.json"],
}
